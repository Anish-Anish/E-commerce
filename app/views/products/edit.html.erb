<div class="container">
    <h1> Editing Product </h1>
 

 <%= form_for @product, url: product_path(@product.id), method: :patch do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <br>
  <div>
    <%= form.label :description %>
    <br>
    <%= form.text_area :description %>
  </div>
  <br>
  <div>
    <%= form.label :brand %>
    <%= form.text_field :brand, class: "form-control" %>
  </div>
  <br>
  <div>
    <%= form.label :price %>
    <%= form.text_field :price, class: "form-control" %>
  </div>
  <br>
  <div>
    <%= form.label :total_stock_amount %>
    <%= form.number_field :total_stock_amount, class: "form-control" %>
  </div>
  <br>
  <div class="field">
    <%= form.label :category_id %>
    <%= form.collection_select(:category_id, Category.all, :id, :category, prompt: 'Select a Category') %>
  </div>
  <br>
  <div class="field">
    <%= form.label :type_id %>
    <%= form.collection_select(:type_id, Type.all, :id, :typeinfo, prompt: 'Select a Type') %>
  </div>
  <br>

  <div>
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  <br>
  <div>
    <%= form.submit 'Update Product' %>
  </div>
<% end %>
  <br>
<%= link_to 'Back', product_path(@product.id) %>
</div>