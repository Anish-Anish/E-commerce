
<style>
  button{
    width: 100%;
  }
</style>
<%= form_for :comment, url: comments_path(:product) do |form| %>

  <div class="form-group">
    <%= form.label :body, "Comment:" %>
    <%= form.text_area :body, class: "form-control", rows: 4 %>

    <% if customerinfo_signed_in?  %>
    <%= form.hidden_field :product_id, value: @product.id %>
    <%= form.hidden_field :customerinfo_id, value: current_customerinfo.id %>
    <% end %>
  </div>

  <%= form.submit "Post Comment", class: "btn btn-warning mt-2" %>
<% end %>
