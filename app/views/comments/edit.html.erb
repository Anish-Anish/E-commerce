
<br>
<div class="container">
    
<h3> Edit Comment </h3>
<br>
<%= form_for @comment, url: "/comments/#{@comment.id}", method: :put do |form| %>

  <div class="form-group">
    <%= form.label :body, "Comment:" %>
    <%= form.text_area :body, class: "form-control", rows: 4 %>

  </div>

  <%= form.submit "Edit Comment", class: "btn btn-warning mt-2" %>
<% end %>


<%= button_to "Back", product_path(@comment.product_id), method: :get, class: "btn btn-warning mt-2"%>
</div>